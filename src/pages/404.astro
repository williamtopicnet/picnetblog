---
import Config from '../config.cjs';
import Layout from '../layouts/index.astro';
const title = 'Page not found';
---

<Layout title={title} lang="en">
  <div class="d-flex flex-column justify-content-center bg-skew bg-skew-light overflow-hidden">
    <div class="main-background">
      <div class="container" >
        <div class="row justify-content-center text-center">
          <div class="col-lg-8 col-xl-7 pt-4">
            <div class="font-weight-bold text-white display-5 my-5 my-lg-6 text-center"></div>
          </div>
        </div>
      </div>
    </div>
    <div class="container py-5 my-5">
      <div class="row justify-content-lg-center text-center">
        <div class="col-lg-8">
            <h1 class="display-4 mb-5 mt-5">{title}</h1>
            <p class="lead mb-5">The page you are looking for does not exist.</p>
            <a href={Config.siteBaseUrl} class="btn btn-primary rounded-pill">Go to home page</a>
        </div>
      </div>
    </div>
  </div>
</Layout>
